---
//  -----  Server Only  -----

import MainLayout from "../layouts/MainLayout.astro";

const name = "Antonio Francisco Cutillas Garcia";
const title = "Home Page";
---

<!--  ************************************************************  -->
<!--  **********  /01-foundation/src/pages/index.astro  **********  -->
<!--  ************************************************************  -->

<MainLayout title="Home Page">
    
    <h1>Astro - 01-foundation</h1>
    
    <h2>{name}</h2>

    <p> Momento actual: {new Date().toLocaleTimeString()} - Año: { new Date().getFullYear() } </p>
    <p id="dateReal"></p>
    <footer> </footer>

    
    <script>
        //  -----  Client Only  -----

        //  -----  Referencias al HTML  -----
        const footer = document.querySelector("footer") as HTMLElement;
        const dateReal = document.getElementById(
            "dateReal"
        ) as HTMLParagraphElement;

        //  -----  current Year  -----
        const currentYear: number = new Date().getFullYear();

        setTimeout(() => {
            footer.innerText = `Año: ${currentYear}`;
        }, 2000);

        //  -----  Momento Actual Real  -----
        setInterval(() => {
            const momentoActualReal: string = new Date().toLocaleTimeString();
            dateReal.innerText = `Momento Actual Real: ${momentoActualReal}`;
        }, 1000);

    </script>

</MainLayout>
